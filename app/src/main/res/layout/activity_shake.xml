<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="458dp"
    android:layout_gravity="center"
    android:background="@drawable/borderframe"
    android:orientation="vertical"
    android:paddingRight="1dp"
    tools:ignore="RtlSymmetry">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/shakeSettTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="Roboto"
                android:padding="10dp"
                android:text="@string/Shake_unlock"
                android:textColor="@color/Black"
                android:textSize="20sp"
                android:textStyle="normal"
                android:layout_weight="2"/>


            <ImageButton
                android:id="@+id/arrowShake"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/ic_arrow"
                android:background="#FFFFFF"
                android:layout_weight="2" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="4"
            android:layout_weight="3">

            <TextView
                android:id="@+id/shakeSettBodyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="Roboto"
                android:paddingLeft="11dp"
                android:paddingTop="5dp"
                android:paddingRight="0dp"
                android:text="@string/Shake_s2"
                android:textColor="@color/Black2"
                android:textSize="14sp"
                android:textStyle="normal|normal" />

            <ImageView
                android:id="@+id/ShakeIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:src="@mipmap/ic_shake" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_weight="1">

            <TextView
                android:id="@+id/minValueSeekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="Roboto"
                android:gravity="center"
                android:text="Осталось трясти"
                android:textColor="@color/Black2"
                android:textSize="14sp"
                android:textStyle="normal|normal" />

            <TextView
                android:id="@+id/maxValueSeekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="Roboto"
                android:gravity="center"
                android:text="4 мин. 30 сек."
                android:textColor="#673AB7"
                android:textSize="14sp"
                android:textStyle="normal" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>